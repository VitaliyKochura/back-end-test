{% extends 'base.html.twig' %}

{% block title %}{{ 'Companies' }}{% endblock %}

{% block body %}
    <div class="container my-4 p-4">
        <div class="d-flex justify-content-between mb-2">
            <a href="{{ path('home') }}" class="link-secondary">Back</a>
            <a href="{{ path('company_add') }}" class="btn btn-dark">Create a new company</a>
        </div>
        <h2 class="text-center">All companies</h2>
        <table class="table table-bordered">
            <thead class="table-dark">
            <tr>
                <th>â„–</th>
                <th>Name</th>
                <th>Website</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for company in companies %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ company.name }}</td>
                    <td>{{ company.website }}</td>
                    <td>{{ company.address }}</td>
                    <td>{{ company.phone }}</td>
                    <td class="text-center">
                        <a href="{{ path('company_edit', {'id': company.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                        <form action="{{ path('company_delete', {'id': company.id}) }}" method="POST" class="d-inline">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-danger btn-sm">{{ 'Delete' }}</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}