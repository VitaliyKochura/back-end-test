{% extends 'base.html.twig' %}

{% block title %}{{ action ~ ' Resume' }}{% endblock %}

{% block body %}
    <div class="container my-4 p-4">
        <a href="{{ path('resume_index') }}" class="link-secondary">Back</a>
        <h2 class="text-center">{{ action ~ ' Resume' }}</h2>
        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-6 mb-4">
                {{ form_label(form.position) }}
                {{ form_widget(form.position, { 'value': resume.position }) }}
            </div>
            <div class="col-md-6 mb-4">
                {{ form_label(form.resumeText) }}
                {{ form_widget(form.resumeText,  { 'value': resume.resumeText }) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-4">
                {{ form_label(form.resumeFile) }}
                {{ form_widget(form.resumeFile) }}
            </div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-success my-4">{{ 'Save' }}</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
