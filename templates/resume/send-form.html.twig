{% extends 'base.html.twig' %}

{% block title %}{{ 'Send Resume' }}{% endblock %}

{% block body %}
    <div class="container my-4 p-4">
        <a href="{{ path('resume_index') }}" class="link-secondary">Back</a>
        <h2 class="text-center">{{ 'Send Resume' }}</h2>
        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-6 mb-4">
                {{ form_label(form.company) }}
                {{ form_widget(form.company) }}
            </div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-success my-4">{{ 'Send' }}</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}